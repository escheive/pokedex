{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "components/*": ["./components/*"],
      "app/*": ["./app/*"],
      "assets/*": ["./assets/*"],
      "utils/*": ["./utils/*"],
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
